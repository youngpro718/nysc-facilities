# Vite environment variables for Supabase
# Copy this file to `.env.local` and fill in your values.
# Do NOT commit `.env.local` to version control.

VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Dev bypass flags (local development only)
# Restart Vite after changing any env variables
VITE_DISABLE_AUTH_GUARD=false
VITE_DISABLE_MODULE_GATES=false
VITE_DISABLE_RATE_LIMIT=false

# Optional DB views (avoid 404s by default)
# Set to true ONLY after creating the views via the SQL files:
#  - sql/lighting_fixtures_enriched.sql
#  - create-room-lighting-stats-view.sql
VITE_USE_ENRICHED_LIGHTING_VIEW=false
VITE_USE_ROOM_LIGHTING_STATS_VIEW=false

# Optional: other app settings can go here
# VITE_APP_ENV=development
